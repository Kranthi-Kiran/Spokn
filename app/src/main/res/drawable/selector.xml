<?xml version="1.0" encoding="utf-8"?>
<animated-selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/on"
        android:state_activated="true">
        <bitmap
            android:src="@mipmap/number_three"/>
    </item>

    <item
        android:id="@+id/off">
        <bitmap
            android:src="@mipmap/number_one"/>
    </item>

    <transition
        android:fromId="@id/off"
        android:toId="@id/on"
        android:drawable="@drawable/countdown">
    </transition>

</animated-selector>